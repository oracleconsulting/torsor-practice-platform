{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build:client",
    "nixpacksVersion": "1.38.0"
  },
  "deploy": {
    "startCommand": "npm run start:client",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacks": {
    "node": "20.19.0"
  }
}

